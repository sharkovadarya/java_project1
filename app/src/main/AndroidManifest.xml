<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.spbau.group202.notdeadbydeadline">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ndbd"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:fullBackupContent="@xml/backup_descriptor">
        <activity
            android:name=".ui.MainActivity"
            android:label="@string/title_activity_main"
            android:screenOrientation="sensorPortrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.AddHomeworkActivity"
            android:label="@string/title_activity_addHomework"
            android:parentActivityName=".ui.HomeworkActivity"
            android:screenOrientation="sensorPortrait"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ru.spbau.group202.notdeadbydeadline.ui.HomeworkActivity" />
        </activity>
        <activity
            android:name=".ui.DisplayHomeworkActivity"
            android:label="@string/title_activity_display_homework"
            android:parentActivityName=".ui.HomeworkActivity"
            android:screenOrientation="sensorPortrait"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ru.spbau.group202.notdeadbydeadline.ui.HomeworkActivity" />
        </activity>
        <activity
            android:name=".ui.DeadlinesActivity"
            android:label="@string/title_activity_deadline"
            android:parentActivityName=".ui.MainActivity"
            android:screenOrientation="sensorPortrait"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ru.spbau.group202.notdeadbydeadline.ui.MainActivity" />
        </activity>
        <activity
            android:name=".ui.HomeworkActivity"
            android:label="@string/title_activity_homework"
            android:parentActivityName=".ui.MainActivity"
            android:screenOrientation="sensorPortrait"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ru.spbau.group202.notdeadbydeadline.ui.MainActivity" />
        </activity>
        <activity
            android:name=".ui.ScheduleActivity"
            android:label="@string/title_activity_schedule"
            android:parentActivityName=".ui.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ru.spbau.group202.notdeadbydeadline.ui.MainActivity" />
        </activity>
        <activity
            android:name=".ui.AddScheduleEntryActivity"
            android:label="@string/title_activity_add_schedule_entry"
            android:parentActivityName=".ui.ScheduleActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ru.spbau.group202.notdeadbydeadline.ui.ScheduleActivity" />
        </activity>
    </application>

</manifest>