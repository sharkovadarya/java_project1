<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="ru.spbau.group202.notdeadbydeadline.ui.ScheduleActivity"
    tools:showIn="@layout/app_bar_schedule">

    <Button
        android:id="@+id/schedulePreviousWeekButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="64dp"
        android:layout_marginStart="16dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="@string/previous_week" />

    <Button
        android:id="@+id/scheduleNextWeekButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="64dp"
        android:layout_marginEnd="16dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="@string/next_week" />

    <TextView
        android:id="@+id/scheduleHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
        android:layout_marginTop="11dp"
        android:stretchColumns="*"
        android:text="@string/scheduleHeader"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ScrollView
        android:id="@+id/scheduleScrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="end"
        android:layout_marginEnd="18dp"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="392dp">

            <TableLayout
                android:id="@+id/scheduleTableLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="6dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:gravity="bottom|end"
                android:shrinkColumns="*">


                <TableRow
                    android:id="@+id/scheduleMondayThursdayHeaders"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="1.0">

                    <TextView
                        android:id="@+id/scheduleMondayHeader"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_column="0"
                        android:layout_weight="0.5"
                        android:text="@string/monday"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/scheduleThursdayHeader"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_column="1"
                        android:layout_weight="0.5"
                        android:text="@string/thursday"
                        android:textStyle="bold" />
                </TableRow>

                <TableRow
                    android:id="@+id/scheduleMondayThursdayEntries"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="1.0">

                    <ListView
                        android:id="@+id/scheduleMondayList"
                        android:layout_width="2dp"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_weight="0.5"
                        android:nestedScrollingEnabled="true" />

                    <ListView
                        android:id="@+id/scheduleThursdayList"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_weight="0.5"
                        android:nestedScrollingEnabled="true" />
                </TableRow>

                <TableRow
                    android:id="@+id/scheduleTuesdayFridayHeader"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="1.0">

                    <TextView
                        android:id="@+id/scheduleTuesdayHeader"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_column="0"
                        android:layout_weight="0.5"
                        android:text="@string/tuesday"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/scheduleFridayHeader"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_column="1"
                        android:layout_weight="0.5"
                        android:text="@string/friday"
                        android:textStyle="bold" />
                </TableRow>

                <TableRow
                    android:id="@+id/scheduleTuesdayFridayEntries"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="1.0">

                    <ListView
                        android:id="@+id/scheduleTuesdayList"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_weight="0.5"
                        android:nestedScrollingEnabled="true" />

                    <ListView
                        android:id="@+id/scheduleFridayList"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_weight="0.5"
                        android:nestedScrollingEnabled="true" />
                </TableRow>

                <TableRow
                    android:id="@+id/scheduleWednesdaySaturdayHeaders"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="1.0">

                    <TextView
                        android:id="@+id/scheduleWednesdayHeader"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_column="0"
                        android:layout_weight="0.5"
                        android:text="@string/wednesday"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/scheduleSaturdayHeader"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_weight="0.5"
                        android:text="@string/saturday"
                        android:textStyle="bold" />
                </TableRow>

                <TableRow
                    android:id="@+id/scheduleWednesdaySaturdayEntries"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="1.0">


                    <ListView
                        android:id="@+id/scheduleWednesdayList"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_weight="0.5"
                        android:nestedScrollingEnabled="true">

                    </ListView>

                    <ListView
                        android:id="@+id/scheduleSaturdayList"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_weight="0.5"
                        android:nestedScrollingEnabled="true"
                        tools:layout_editor_absoluteX="184dp"
                        tools:layout_editor_absoluteY="8dp" />
                </TableRow>

            </TableLayout>
        </RelativeLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
