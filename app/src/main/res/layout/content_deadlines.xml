<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="ru.spbau.group202.notdeadbydeadline.UI.DeadlinesActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:showIn="@layout/activity_deadlines">

    <TextView
        android:id="@+id/deadlinesHeader2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="43dp"
        android:text="@string/deadlineHeader"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/deadlinesList2"
        app:layout_constraintStart_toStartOf="@+id/deadlinesList2"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/deadlinesList2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="26dp"
        android:layout_marginStart="26dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/deadlinesHeader2" />
</android.support.constraint.ConstraintLayout>
